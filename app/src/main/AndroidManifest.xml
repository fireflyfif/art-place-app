<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.artplace">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ArtPlaceApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.artworksMainActivity.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ArtworkDetailActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.artworksMainActivity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.artworksMainActivity.MainActivity" />
        </activity>
        <activity
            android:name=".ui.artistDetailActivity.ArtistDetailActivity"
            android:parentActivityName=".ui.ArtworkDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.ArtworkDetailActivity" />
        </activity>
        <activity
            android:name=".ui.favoriteArtworks.FavArtworksActivity"
            android:parentActivityName=".ui.artworksMainActivity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.artworksMainActivity.MainActivity" />
        </activity>
        <activity
            android:name=".ui.FavDetailActivity"
            android:parentActivityName=".ui.favoriteArtworks.FavArtworksActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.favoriteArtworks.FavArtworksActivity" />
        </activity>

        <receiver android:name=".widget.ArtPlaceWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETED" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/art_place_widget_info" />
        </receiver>

        <service
            android:name=".widget.FavoritesWidgetService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>

    </application>

</manifest>