<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dev.iotarho.artplace.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="app.app.android.artplace.ArtPlaceApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="app.app.android.artplace.ui.mainactivity.MainActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.app.android.artplace.ui.artworkdetail.ArtworkDetailActivity"
            android:launchMode="singleTop"
            android:parentActivityName="app.app.android.artplace.ui.mainactivity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.app.android.artplace.ui.mainactivity.MainActivity" />
        </activity>
        <activity
            android:name="app.app.android.artplace.ui.artistdetail.ArtistDetailActivity"
            android:parentActivityName="app.app.android.artplace.ui.artworkdetail.ArtworkDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.app.android.artplace.ui.artworkdetail.ArtworkDetailActivity" />
        </activity>
        <activity
            android:name="app.app.android.artplace.ui.favorites.FavArtworksActivity"
            android:parentActivityName="app.app.android.artplace.ui.mainactivity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.app.android.artplace.ui.mainactivity.MainActivity" />
        </activity>
        <activity
            android:name="app.app.android.artplace.ui.FavDetailActivity"
            android:parentActivityName="app.app.android.artplace.ui.favorites.FavArtworksActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.app.android.artplace.ui.favorites.FavArtworksActivity" />
        </activity>
        <activity
            android:name="app.app.android.artplace.ui.searchdetail.SearchDetailActivity"
            android:parentActivityName="app.app.android.artplace.ui.mainactivity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.app.android.artplace.ui.mainactivity.MainActivity" />
        </activity>

        <activity android:name="app.app.android.artplace.ui.LargeArtworkActivity"
            android:parentActivityName="app.app.android.artplace.ui.artworkdetail.ArtworkDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.app.android.artplace.ui.artworkdetail.ArtworkDetailActivity" />

        </activity>

        <receiver android:name="app.app.android.artplace.widget.ArtPlaceWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETED" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/art_place_widget_info" />
        </receiver>

        <service
            android:name="app.app.android.artplace.widget.FavoritesWidgetService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>