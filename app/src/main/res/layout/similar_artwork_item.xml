<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/padding_6dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/similar_artwork_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/margin_4dp"
            android:background="@color/color_primary"
            android:contentDescription="@string/current_artwork_description"
            android:gravity="center_horizontal"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/similar_artwork_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_4dp"
            android:background="@color/color_primary"
            android:contentDescription="@string/current_artwork_description"
            android:gravity="center_horizontal"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <TextView
        android:id="@+id/similar_artwork_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/amethysta"
        android:maxLines="2"
        android:paddingStart="@dimen/padding_10dp"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingTop="@dimen/padding_10dp"
        android:paddingEnd="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        android:paddingBottom="@dimen/padding_6dp"
        android:textColor="@color/color_on_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Title of Artwork with a Very Long Name Very Long Name Very Long Name" />

    <TextView
        android:id="@+id/similar_artwork_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/amethysta"
        android:maxLines="2"
        android:paddingStart="@dimen/padding_10dp"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingEnd="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        android:paddingBottom="@dimen/padding_16dp"
        android:textAllCaps="true"
        android:textColor="@color/color_surface"
        android:textStyle="bold"
        tools:text="Title of Artwork" />

</LinearLayout>
