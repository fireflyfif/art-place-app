<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="@dimen/padding_10dp">

    <android.support.design.card.MaterialCardView
        android:id="@+id/artwork_cardview"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:strokeColor="@color/colorCardStroke"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/artwork_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimary"
                android:contentDescription="@string/current_artwork_description"
                android:gravity="center_horizontal"
                android:scaleType="fitStart" />

            <TextView
                android:id="@+id/artwork_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_light"
                android:maxLines="2"
                android:paddingStart="@dimen/padding_10dp"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingTop="@dimen/padding_10dp"
                android:paddingEnd="@dimen/padding_10dp"
                android:paddingRight="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Title of Artwork with a Very Long Name Very Long Name Very Long Name" />

            <TextView
                android:id="@+id/artwork_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:maxLines="2"
                android:paddingStart="@dimen/padding_10dp"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingEnd="@dimen/padding_10dp"
                android:paddingRight="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_16dp"
                android:textAllCaps="true"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                tools:text="Artist name" />

        </LinearLayout>
    </android.support.design.card.MaterialCardView>
</FrameLayout>