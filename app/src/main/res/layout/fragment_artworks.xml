<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="app.app.android.artplace.ui.mainactivity.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/artworks_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        tools:listitem="@layout/artwork_item"
        app:spanCount="2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_16dp"
        android:layout_marginBottom="@dimen/bottom_nav_margin">

        <TextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:gravity="center"
            android:padding="@dimen/padding_16dp"
            android:text="@string/error_msg"
            android:textColor="@color/colorAccent" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyProgressBarRectangle"
            android:padding="@dimen/padding_10dp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>