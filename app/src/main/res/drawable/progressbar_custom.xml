<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/progress"
        android:top="16dp"
        android:bottom="16dp">
        <layer-list>
            <item>
                <rotate
                    android:fromDegrees="45"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="405">
                    <shape android:shape="rectangle">
                        <size
                            android:width="80dp"
                            android:height="90dp"/>
                        <stroke
                            android:width="6dp"
                            android:color="@color/color_primary"/>
                    </shape>
                </rotate>
            </item>
            <item>
                <rotate
                    android:fromDegrees="90"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="-450">
                    <shape android:shape="rectangle">
                        <size
                            android:width="80dp"
                            android:height="90dp"/>
                        <stroke
                            android:width="6dp"
                            android:color="@color/color_background"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</layer-list>