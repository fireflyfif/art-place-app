<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/progress"
        android:top="6dp"
        android:left="6dp"
        android:right="6dp"
        android:bottom="6dp">
        <layer-list>
            <item>
                <rotate
                    android:fromDegrees="45"
                    android:pivotX="45%"
                    android:pivotY="55%"
                    android:toDegrees="405"
                    android:drawable="@drawable/ic_ellipse_red_1">
                </rotate>
            </item>
            <item>
            <rotate
                android:fromDegrees="90"
                android:pivotX="50%"
                android:pivotY="45%"
                android:toDegrees="-450"
                android:drawable="@drawable/ic_ellipse_blue_2">
            </rotate>
            </item>
            <item>
                <rotate
                    android:fromDegrees="90"
                    android:pivotX="50%"
                    android:pivotY="55%"
                    android:toDegrees="450"
                    android:drawable="@drawable/ic_ellipse_red_3">
                </rotate>
            </item>
        </layer-list>
    </item>
</layer-list>