<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Base.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--System navigation styles-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">?colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">?colorOnSurface</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">?colorOnSurface</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>

        <!--Remap legacy AppCompat attributes to MaterialComponent attributes-->
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>
    </style>
</resources>