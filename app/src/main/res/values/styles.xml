<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PopupMenuStyle" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">?colorSurface</item>
    </style>

    <style name="details_label" parent="Theme.MaterialComponents">
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/margin_8dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/margin_16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <!--Custom Progress Bar -->
    <!-- source: http://www.zoftino.com/android-progressbar-and-custom-progressbar-examples -->
    <style name="MyProgressBarRectangle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circles</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
<!--        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>-->
<!--        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>-->
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

</resources>
